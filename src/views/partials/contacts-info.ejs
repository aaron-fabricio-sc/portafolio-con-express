<section class="container p-4 sm:p-8">
  <article class="">
    <h3 class="text-center text-cyan-400 font-bold text-2xl sm:text-3xl">
      Contact info
    </h3>
    <p class="text-base text-center sm:text-xl">
      If you hace any questions, feel free to contact me.
    </p>

    <article class="container-icons-services mt-2 text-center">
      <a
        href="https://www.linkedin.com/in/aaron-fabricio-santa-cruz-valdez/ "
        target="_blank"
      >
        <i class="fa-brands fa-linkedin-in linkedin"></i>
      </a>
      <a href="https://twitter.com/AaronCodeSa" target="_blank"
        ><i class="fa-brands fa-twitter twitter"></i
      ></a>
      <a href="https://github.com/aaron-fabricio-sc" target="_blank"
        ><i class="fa-brands fa-github github"></i
      ></a>
      <a href="https://wa.link/1p6b4y"
        ><i class="fa-brands fa-whatsapp whatsapp"></i
      ></a>
    </article>
  </article>
  <article class="mt-3">
    <form
      action="https://formsubmit.co/b8923f524978f17ce1624e3402baeec8"
      method="POST"
      class="w-full formulario"
    >
      <div class="container-input name-input">
        <label for="name" class="sm:text-xl"> Name: </label>
        <input
          type="text"
          placeholder="Name..."
          name="name"
          class="name w-full"
          autocomplete="off"
        />
      </div>
      <div class="container-input">
        <label for="email" class="sm:text-xl">Email:</label>
        <input
          type="email"
          placeholder="Email..."
          name="email"
          class="email w-full"
          autocomplete="off"
        />
      </div>
      <div class="container-input subject-input">
        <label for="subject" class="sm:text-xl">Subject:</label>
        <input
          type="text"
          placeholder="Subject..."
          name="subject"
          autocomplete="off"
          class="subject w-full"
        />
      </div>
      <div class="container-input message-input">
        <label for="message" class="sm:text-xl"
          >Write your message here...</label
        >
        <textarea
          name="message"
          id="message"
          cols="30"
          autocomplete="off"
          rows="5"
          class="w-full message"
        ></textarea>
      </div>
      <div class="flex justify-center button-input">
        <input type="submit" value="Send" class="button-submit" />
      </div>

      <input type="hidden" name="_next" value="https://aaroncode.net" id="" />
      <input type="hidden" name="_captcha" value="false" id="" />
    </form>
  </article>
</section>
